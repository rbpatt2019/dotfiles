set $mod Mod4

# Font for window titles. Will also be used by the bar unless a different font
# is used in the bar {} block below.
font pango:Inconsolata-dz for Powerline 20

# thin borders
default_border pixel 2
hide_edge_borders both
workspace_layout tabbed
focus_follows_mouse no

# Before i3 v4.8, we used to recommend this one as the default:
# font -misc-fixed-medium-r-normal--13-120-75-75-C-70-iso10646-1
# The font above is very space-efficient, that is, it looks good, sharp and
# clear in small sizes. However, its unicode glyph coverage is limited, the old
# X core fonts rendering does not support right-to-left and this being a bitmap
# font, it doesnâ€™t scale on retina/hidpi displays.

# Use Mouse+$mod to drag floating windows to their wanted position
floating_modifier $mod

# start a terminal
bindsym $mod+Return exec --no-startup-id termite
bindsym $mod+Shift+Return exec --no-startup-id termite --name="__scratchpad", scratchpad show

# kill focused window
bindsym $mod+Shift+q kill

# start dmenu (a program launcher)
# bindsym $mod+d exec dmenu_run
# There also is the (new) i3-dmenu-desktop which only displays applications
# shipping a .desktop file. It is a wrapper around dmenu, so you need that
# installed.
bindsym $mod+d exec --no-startup-id dmenu_run

# change focus
bindsym $mod+h focus left
bindsym $mod+j focus down
bindsym $mod+k focus up
bindsym $mod+l focus right

# move focused window
bindsym $mod+Shift+h move left
bindsym $mod+Shift+j move down
bindsym $mod+Shift+k move up
bindsym $mod+Shift+l move right

# split in horizontal orientation
bindsym $mod+Shift+b split h

# split in vertical orientation
bindsym $mod+Shift+v split v

# change container layout (stacked, tabbed, toggle split)
# bindsym $mod+Shift+s layout stacking
bindsym $mod+Shift+t layout tabbed
bindsym $mod+Shift+s layout toggle split

# Scatchpad commands
for_window [instance="__scratchpad"] move scratchpad
for_window [instance="__scratchpad"] move absolute position 1920 px 540 px
for_window [instance="__scratchpad"] sticky enable
for_window [instance="__scratchpad"] resize set 1915 1080
# Move a window to the scratchpad
bindsym $mod+Shift+space move scratchpad
# Toggle scratchpad
bindsym $mod+space scratchpad show

# change focus between tiling / floating windows
bindsym $mod+g focus mode_toggle

# toggle tiling / floating
bindsym $mod+Shift+f floating toggle

# enter fullscreen mode for the focused container
bindsym $mod+f fullscreen toggle

# focus the parent container
# bindsym $mod+a focus parent

# focus the child container
#bindsym $mod+d focus child

# switch to workspace
bindsym $mod+1 workspace number 1:Home
bindsym $mod+2 workspace number 2:Code
bindsym $mod+3 workspace number 3:Web
bindsym $mod+4 workspace number 4:Mail
bindsym $mod+5 workspace number 5
bindsym $mod+6 workspace number 6
bindsym $mod+7 workspace number 7
bindsym $mod+8 workspace number 8
bindsym $mod+9 workspace number 9
bindsym $mod+0 workspace number 10

# move focused container to workspace
bindsym $mod+Shift+1 move container to workspace number 1:Home
bindsym $mod+Shift+2 move container to workspace number 2:Code
bindsym $mod+Shift+3 move container to workspace number 3:Web
bindsym $mod+Shift+4 move container to workspace number 4:Mail
bindsym $mod+Shift+5 move container to workspace number 5
bindsym $mod+Shift+6 move container to workspace number 6
bindsym $mod+Shift+7 move container to workspace number 7
bindsym $mod+Shift+8 move container to workspace number 8
bindsym $mod+Shift+9 move container to workspace number 9
bindsym $mod+Shift+0 move container to workspace number 10

# change workspace name
bindsym $mod+Shift+r exec --no-startup-id i3-input -F 'Rename workspace to %s' -P 'New name: ' -f 'pango:Inconsolata-dz for Powerline 20'

# System bindings
set $mode_system System [r] Restart i3wm, [x] Lock, [s] Suspend, [b] ReBoot, [d] ShutDown
mode "$mode_system" {
    bindsym r restart
    bindsym x exec "i3lock-fancy-rapid 5 2"
    bindsym s exec "i3exit suspend"
    bindsym b exec "i3exit reboot"
    bindsym d exec "i3exit shutdown"
    bindsym Return mode "default"
    bindsym Escape mode "default"
}
bindsym $mod+s mode "$mode_system"

# Brightness Bindings
set $mode_brightness Brightness [k] +5%, [j] -5%, [h] Minimum, [l] Maximum
mode "$mode_brightness" {
    bindsym k exec --no-startup-id xbacklight + 5
    bindsym j exec --no-startup-id xbacklight - 5
    bindsym l exec --no-startup-id xbacklight = 100
    bindsym h exec --no-startup-id xbacklight = 5
    bindsym Return mode "default"
    bindsym Escape mode "default"
}
bindsym $mod+b mode "$mode_brightness"

# Volume Bindings
set $mode_volume Volume [k] +5%, [j] -5%, [h] Mute, [l] Unmute
mode "$mode_volume" {
    bindsym k exec --no-startup-id amixer set Master 5%+
    bindsym j exec --no-startup-id amixer set Master 5%-
    bindsym h exec --no-startup-id amixer set Master mute
    bindsym l exec --no-startup-id amixer set Master unmute
    bindsym Return mode "default"
    bindsym Escape mode "default"
}
bindsym $mod+v mode "$mode_volume"

# Resize Bindings
set $mode_resize Resize [k] +height, [j] -height, [h] -width, [l] +width
mode "$mode_resize" {
    bindsym h resize shrink width 10 px or 10 ppt
    bindsym k resize grow height 10 px or 10 ppt
    bindsym j resize shrink height 10 px or 10 ppt
    bindsym l resize grow width 10 px or 10 ppt
    bindsym Return mode "default"
    bindsym Escape mode "default"
}
bindsym $mod+r mode "mode_resize"

# set window colors
#                       border  backgro text    indicat child_border
client.focused          #808080 #000000 #808080 #000000 #5fafd7
client.focused_inactive #000000 #000000 #808080 #000000 #808080
client.unfocused        #000000 #000000 #808080 #000000 #808080
client.urgent           #000000 #000000 #808080 #000000 #000000


# Start i3bar to display a workspace bar (plus the system information i3status
# finds out, if available)
exec_always --no-startup-id ~/.config/polybar/launch.sh
bar {
    position bottom
    mode hide
    hidden_state hide
    workspace_buttons no
    binding_mode_indicator no
    modifier $mod
    font pango:Inconsolata-dz for Powerline 20

	colors {
        background #000000
        statusline #000000
        binding_mode #808080 #808080 #1c1c1c
    }
}

# floating windows
for_window [class="Pavucontrol"] floating enable
for_window [class="Kalu"] floating enable

# Swap caps and escape
exec --no-startup-id setxkbmap -option caps:swapescape

# Autostart apps
exec --no-startup-id /usr/lib/polkit-gnome/polkit-gnome-authentication-agent-1
exec --no-startup-id "compton -cC"
exec --no-startup-id nm-applet
exec --no-startup-id udiskie -ant
exec --no-startup-id hsetroot -solid "#000000"
exec --no-startup-id "sleep 2s && kalu"
exec --no-startup-id termite --name="__scratchpad"
exec --no-startup-id i3-msg 'workspace 2:Code; exec termite -d ~/PyProjects/'
exec --no-startup-id i3-msg 'workspace 3:Web; exec termite -e "w3m google.com"'
exec --no-startup-id i3-msg 'workspace 4:Mail; exec vmail'
exec --no-startup-id i3-msg 'workspace 1:Home; exec termite -e htop; exec termite -e ranger'
