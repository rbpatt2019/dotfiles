{
  "suggest.triggerAfterInsertEnter": true,
  "suggest.timeout": 500,
  "suggest.noselect": true,
  "suggest.minTriggerInputLength": 2,
  "suggest.snippetIndicator": "^",
  "suggest.enablePreview": true,
  "suggest.detailMaxLength": 88,
  "snippets.loadFromExtensions": true,
  "snippets.ultisnips.enable": true,
  "snippets.ultisnips.directories": ["pack/rbpatt2019/start/vim-snippets/UltiSnips"], 
  "snippets.snipmate.enable": false,
  "diagnostic.refreshOnInsertMode": true,
  "diagnostic.enableSign": true,
  "diagnostic.messageTarget": "echo",
  "signature.enable": true,
  "signature.target": "echo",
  "list.maxHeight": 20,
  "list.maxPreviewHeight": 20,
  "highlight.document.enable": true,
  "highlight.colors.enable": true,
  "coc.preferences.hoverTarget": "float",
  "coc.preferences.jumpCommand": "split",
  "coc.preferences.colorSupport": true,
  "python.autoUpdateLanguageServer": true,
  "python.formatting.provider": "black",
  "python.formatting.blackPath": "black",
  "python.jediEnabled": false,
  "python.linting.enabled": true,
  "python.linting.lintOnSave": true,
  "python.linting.mypyEnabled": true,
  "python.linting.mypyPath": "mypy",
  "python.linting.pylintEnabled": true,
  "python.linting.pylintPath": "pylint",
  "python.pythonPath": "python",
  "python.venvFolders": ["~/.pyenv/versions"],
  "python.sortImports.path": "isort",
  "markdownlint.onOpen": true,
  "markdownlint.onChange": true,
  "markdownlint.onSave": true,
  "markdownlint.config": {
    "line-length": false,
    "no-emphasis-as-heading": false
  },
  "r.lsp.diagnostics": true,
  "yank.enableCompletion": false
}
