# For aliases
. ~/.zsh_aliases

# >>> conda initialize >>>
# !! Contents within this block are managed by 'conda init' !!
__conda_setup="$('/Users/pattersonrb/miniconda3/bin/conda' 'shell.zsh' 'hook' 2> /dev/null)"
if [ $? -eq 0 ]; then
    eval "$__conda_setup"
else
    if [ -f "/Users/pattersonrb/miniconda3/etc/profile.d/conda.sh" ]; then
        . "/Users/pattersonrb/miniconda3/etc/profile.d/conda.sh"
    else
        export PATH="/Users/pattersonrb/miniconda3/bin:$PATH"
    fi
fi
unset __conda_setup
# <<< conda initialize <<<

[ -f ~/.fzf.zsh ] && source ~/.fzf.zsh

export FZF_DEFAULT_OPTS="--layout=reverse --inline-info --preview='head -25 {}'"

export PYENV_ROOT="$HOME/.pyenv"
if command -v pyenv 1>/dev/null 2>&1; then
  eval "$(pyenv init -)"
fi
eval "$(pyenv virtualenv-init -)"

export POETRY_VIRTUALENVS_PATH="/Users/pattersonrb/.pyenv/versions"

eval "$(hub alias -s)"

eval "$(direnv hook zsh)"
